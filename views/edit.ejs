<% include partials/header %>

    <div class="ui main container text segment">
        
        <div class="ui huge header">Edit Blog</div>
    
        <form class="ui form" action="<%= "/blogs/" + blog._id + "?_method=PUT" %>" method="post">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>" required>
            </div>
            <div class="field">
                <label>Image URL</label>
                <input type="text" name="blog[image]" placeholder="image url" value="<%= blog.image %>" required>
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" placeholder="blog content" required><%= blog.body %></textarea>
            </div>
            <button class="ui violet big basic button" type="submit">Save</button>
        </form>
    
    </div>

<% include partials/footer %>